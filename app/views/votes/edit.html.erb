	<div>
	  <h1>Editing Vote</h1>
	</div> 

<% if user_signed_in? && (current_user.id == @vote.voter_id) %>	
	<div>
		<p><%=@survey.question %></p>
	</div>
	<div class="button-bottom">
	  <%= render 'form', vote: @vote %>
	</div>  
	<div class="clear-links survey-question">
	  <%= link_to 'Back', surveys_path %> | <%= link_to 'Delete', [@survey, @vote], method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>
<% else %>
  <p>Sorry...you do not have permission to view this page.</p>  
	<div class="clear-links survey-question">
		<%= link_to 'Back', surveys_path %>
	</div>
<% end %>